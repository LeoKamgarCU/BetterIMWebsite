<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
    <div class="container text-center"  style="padding-bottom:10vh">
        <h1 style="padding-top:2vh;padding-bottom: 1vh;"> All Players </h1>

        <p><i><%= players.length%> total player<%- (players.length == 1) ? '' : 's' %></i></p>

        <form action="/searchPlayers" method="GET">
        <div class="input-group mb-3 mx-auto" style="width:27.5vw;">
            
            <input  type="text" class="form-control" name="q" id="q" placeholder="Search by player ID, username, name, or class year" aria-label="query" aria-describedby="basic-addon1">
           
        </div>
        
        </form>

        <div class="row">

        <% players.forEach(function(player){ %>
            <div class="col-md-2" style="padding-top:2vh">

            <form action="/player" method="GET">
                <input class="form-control" name="playerid" id="playerid" value="<%= player.playerid%>" type="hidden">

            <button style="background-color:#1e90ff; color:white; " class="btn rounded-pill"  >
                    <%= player.playername  %>
                    
                  </button>
                </form>
                </div>


        <% }); %>
        </div>




    </div>



</main>


<%- include ('../partials/footer') %>
