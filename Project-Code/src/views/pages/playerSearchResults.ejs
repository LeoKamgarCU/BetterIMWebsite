<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>


<main>    
    <div class="container text-center"  style="padding-bottom:10vh">

        <h1 style="padding-top:2vh;padding-bottom: 2vh;"> Search Results </h1>

        <% if(players && playersInt) { %>
            <p><i><%= players.length + playersInt.length %> players found</i></p>
            <%} else if(players) { %>
            <p><i><%= players.length %> players found</i></p>
            <%} else if(playersInt){%>
            <p><i><%= playersInt.length %> players found</i></p>
            <%} else {%>
            <p><i>0 players found</i></p>
            <%}%>


        <%- include ('../partials/message') %>



        <div class="row">

            <% players.forEach(function(player){ %>
                <div class="col-md-2" style="padding-top:2vh">
    
                <form action="/player" method="GET">
                    <input class="form-control" name="playerid" id="playerid" value="<%= player.playerid%>" type="hidden">
    
                <button style="background-color:#e8fcec; color:#17d475; " class="btn rounded-pill"  >
                        <%= player.playername  %>
                        
                      </button>
                    </form>
                    </div>
    
    
            <% }); %>

            <% playersInt.forEach(function(player){ %>
                <div class="col-md-2" style="padding-top:2vh">
    
                <form action="/player" method="GET">
                    <input class="form-control" name="playerid" id="playerid" value="<%= player.playerid%>" type="hidden">
    
                <button style="background-color:#e8fcec; color:#17d475; " class="btn rounded-pill"  >
                        <%= player.playername  %>
                        
                      </button>
                    </form>
                    </div>
    
    
            <% }); %>
            </div>




</div>
</main>


<%- include ('../partials/footer') %>
