<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>


<main>
    <div class="container text-center  style="padding-bottom:10vh"">
        <h1 style="padding-top:2vh"> Your Teams </h1>

        <% teams.forEach(function(team){ %>



            
           
            <form action="/team" method="GET">
                <input class="form-control" name="teamid" id="teamid" value="<%= team.teamid%>" type="hidden">
                <div style="padding-top:3vh">
                  <button style="background-color:#1e90ff; color:white; " class="btn rounded-pill"  >
                    <%= team.teamname  %> (ID: <%= team.teamid %>)
                    
                  </button>
                </div>
            </form>


        <% }); %>




    </div>



</main>


<%- include ('../partials/footer') %>
